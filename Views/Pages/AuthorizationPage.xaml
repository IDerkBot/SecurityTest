<Page
	x:Class="SecurityTest.Views.Pages.AuthorizationPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:SecurityTest.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	Title="Форма входа"
	HorizontalAlignment="Center"
	VerticalAlignment="Center"
	d:DesignHeight="190"
	d:DesignWidth="300"
	mc:Ignorable="d">

	<StackPanel Width="300">
		<TextBox
			Name="TbSurname"
			md:HintAssist.Hint="Фамилия"
			md:HintAssist.IsFloating="True"
			FontSize="16" />
		<TextBox
			Name="TbFirstName"
			md:HintAssist.Hint="Имя"
			md:HintAssist.IsFloating="True"
			FontSize="16" />
		<TextBox
			Name="TbPatronymic"
			md:HintAssist.Hint="Отчество"
			md:HintAssist.IsFloating="True"
			FontSize="16" />
		<TextBox
			Name="TbPassword"
			md:HintAssist.Hint="Пароль"
			md:HintAssist.IsFloating="True"
			FontSize="16" />
		<Button
			Margin="0,5"
			Click="ButtonBase_OnClick"
			Content="Вход"
			Foreground="White" />
	</StackPanel>
</Page>